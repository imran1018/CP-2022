#include<stdio.h>
int main()
{
    int n,i,x,y,j,sum;
    scanf("%d",&n);
    for(i=1;i<=n;i++){
        scanf("%d%d",&x,&y);
        sum=0;
        if(x%2==0){
            x++;
        }
        for(j=1;j<=y;j++){
            sum=sum+x;
            x=x+2;
        }
        printf("%d\n",sum);
    }
    return 0;
}
