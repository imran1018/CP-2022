#include<stdio.h>
int main()
{
    int a,ev=0,od=0,p=0,n=0;
    for(int i=0;i<5;i++){
        scanf("%d",&a);
        if(a%2==0)
            ev++;
        else
            od++;
        if(a>0)
            p++;
        else if(a<0)
            n++;

    }
     printf("%d valor(es) par(es)\n",ev);
        printf("%d valor(es) impar(es)\n",od);
        printf("%d valor(es) positivo(s)\n",p);
        printf("%d valor(es) negativo(s)\n",n);
        return 0;
}


